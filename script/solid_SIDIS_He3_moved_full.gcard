<gcard>

<detector name="../geometry/magnet_moved/solid_solenoid" factory="TEXT" variation="v4"/>
<detector name="../geometry/magnet_moved/solid_solenoid_cryo" factory="TEXT" variation="Original"/>
<detector name="../geometry/ec_segmented_moved/solid_SIDIS_ec_largeangle" factory="TEXT" variation="Original"/>
<detector name="../geometry/ec_segmented_moved/solid_SIDIS_ec_forwardangle" factory="TEXT" variation="Original"/>
<detector name="../geometry/hgc_moved/solid_SIDIS_hgc" factory="TEXT" variation="Original"/>
<detector name="../geometry/lgc_moved/lg_cherenkov" factory="TEXT" variation="SIDIS"/>
<detector name="../geometry/mrpc_moved/solid_SIDIS_mrpc_forwardangle" factory="TEXT" variation="Original"/>
<detector name="../geometry/spd_moved/solid_SIDIS_spd_forwardangle" factory="TEXT" variation="Original"/>
<detector name="../geometry/spd_moved/solid_SIDIS_spd_largeangle" factory="TEXT" variation="Original"/>
<detector name="../geometry/gem_moved/solid_SIDIS_gem" factory="TEXT" variation="Original"/>
<detector name="../geometry/target/solid_SIDIS_target_He3" factory="TEXT" variation="Original"/>
<detector name="../geometry/target/solid_SIDIS_target_He3_collimator" factory="TEXT" variation="Original"/>
<detector name="../geometry/target/solid_SIDIS_target_He3_coil" factory="TEXT" variation="Original"/>
<detector name="../geometry/beamline_moved/solid_SIDIS_beamline_He3" factory="TEXT" variation="Original"/>

<option name="INTEGRATEDRAW" value="flux"/>

<option name="RECORD_PASSBY" value="1"/>
<option name="SAVE_ALL_MOTHERS" value="1"/>
<option name="RECORD_OPTICALPHOTONS" value="1"/>

<option name="HIT_PROCESS_LIST" value="solid"/>
<option name="PHYSICS" value="QGSP_BERT+STD+Optical"/>
<option name="HALL_MATERIAL" value="G4_AIR"/>

<option name="MAX_X_POS" value="20000"/>
<option name="MAX_Y_POS" value="20000"/>
<option name="MAX_Z_POS" value="20000"/>
<option name="HALL_DIMENSIONS" value="20*m,20*m,20*m"/>

<option name="FIELD_DIR" value="/group/solid/www/solid/html/files/field"/>
<option name="HALL_FIELD" value="solenoid_v4"/>
<option name="FIELD_PROPERTIES" value="solenoid_v4, 0.01*mm, G4ClassicalRK4,linear"/>

<option name="BEAM_P"   value="e-,5.5*GeV,20*deg,0*deg"/>
<option name="SPREAD_P" value="5.5*GeV,20*deg,180*deg"/>
<option name="BEAM_V"   value="(0,0,-350)cm"/>
<option name="SPREAD_V" value="(0.3,20)cm"/>


<option name="EXEC_MACRO" value="solid_slice.vis"/>
<option name="geometry" value="1000x1000"/>
<option name="HIGH_RES" value="1"/>
<option name="USE_GUI"  value="1"/>

</gcard>

